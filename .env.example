# Shinmen Takezo IDE Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# AI Configuration (Required)
# =============================================================================

# CHUTS AI API Key - Get from https://chutes.ai
NEXT_PUBLIC_AI_API_KEY=your_chuts_ai_api_key_here

# CHUTS AI Base URL - Default endpoint
NEXT_PUBLIC_AI_BASE_URL=https://llm.chutes.ai/v1/

# =============================================================================
# Application Configuration
# =============================================================================

# Application Name
NEXT_PUBLIC_APP_NAME="Shinmen Takezo IDE"

# AI Assistant Name
NEXT_PUBLIC_AI_AGENT_NAME="Shinmen"

# Application Version
NEXT_PUBLIC_APP_VERSION="0.1.0"

# =============================================================================
# Optional: Advanced Features (Future Use)
# =============================================================================

# Real-time Collaboration WebSocket URL
NEXT_PUBLIC_COLLABORATION_URL=ws://localhost:3001

# Database URL for advanced features
DATABASE_URL=your_database_connection_string

# Redis URL for caching and sessions
REDIS_URL=your_redis_connection_string

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (development only)
NEXT_PUBLIC_DEBUG_MODE=false

# Enable AI request logging
NEXT_PUBLIC_LOG_AI_REQUESTS=false

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret for authentication (if implementing user accounts)
JWT_SECRET=your_jwt_secret_here

# Session secret for secure sessions
SESSION_SECRET=your_session_secret_here

# =============================================================================
# Third-party Integrations (Optional)
# =============================================================================

# GitHub OAuth (for Git integration)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth (for authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# Feature Flags
# =============================================================================

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# Enable WebContainer integration
NEXT_PUBLIC_ENABLE_WEBCONTAINER=false

# Enable real-time collaboration
NEXT_PUBLIC_ENABLE_COLLABORATION=false

# Enable Git integration
NEXT_PUBLIC_ENABLE_GIT=false

# =============================================================================
# Performance Configuration
# =============================================================================

# AI request timeout (milliseconds)
NEXT_PUBLIC_AI_TIMEOUT=30000

# File system cache size (MB)
NEXT_PUBLIC_FS_CACHE_SIZE=100

# Maximum file size for editing (MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# =============================================================================
# UI Configuration
# =============================================================================

# Default theme
NEXT_PUBLIC_DEFAULT_THEME=dark

# Enable theme switching
NEXT_PUBLIC_ENABLE_THEME_SWITCH=true

# Default editor font size
NEXT_PUBLIC_DEFAULT_FONT_SIZE=14

# Default editor font family
NEXT_PUBLIC_DEFAULT_FONT_FAMILY="JetBrains Mono, Consolas, Monaco, monospace"

# =============================================================================
# Deployment Configuration
# =============================================================================

# Production URL
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# CDN URL for assets
NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com

# API Base URL (if using separate API server)
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=false

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# Notes
# =============================================================================

# 1. Only NEXT_PUBLIC_AI_API_KEY is required for basic functionality
# 2. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 3. Keep sensitive values (like secrets) without the NEXT_PUBLIC_ prefix
# 4. Restart the development server after changing environment variables
# 5. Never commit .env.local to version control
